<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
   <meta name="viewport" content="maximum-scale=0.5,minimum-scale=0.5,user-scalable=1,width=device-width,initial-scale=0.5"/>
  <meta content="yes" name="apple-mobile-web-app-capable" />
  <meta content="black" name="apple-mobile-web-app-status-bar-style" />
  <meta content="telephone=no" name="format-detection" />
  <link rel="stylesheet" href="../css/reset.css">
  <link rel="stylesheet" href="../css/base.css">
  <link rel="stylesheet" href="../css/common.css">
  <link rel="stylesheet" href="../css/font-icon.css">
  <title>金币充值</title>
</head>
<body>
<div class="wrap">
  <!-- 金币充值 -->
  <div class="recharge">
    <!-- top顶部 -->
    <div class="top-bar">
      <div class="top-bar-bd">
        <p class="title">
          <i class="icon-m icon-close"></i>
          金币充值
        </p>
      </div>
      <div class="top-bar-line"></div>
    </div>
    <!-- top顶部 -->
    
    <!-- 金币余额 -->
    <div class="remain-balance">
      <span class="pull-right f26">充值就送等量战旗币！</span>
      <p class="org f32">金币余额：<span>8500</span></p>
    </div>
    <!-- 金币余额 end -->

    <!-- 选择充值金额 -->
    <div class="rechage-limit">
      <div class="til">请选择充值金额</div>
      <div class="limit-list">
        <ul class="clearfix">
          <li class="active">
            <i class="sel"></i>
            <p class="count-gold">420金币</p>
            <p class="count-rmb">¥6</p>
          </li>
          <li>
            <i class="sel"></i>
            <p class="count-gold">840金币</p>
            <p class="count-rmb">¥12</p>
          </li>
          <li>
            <i class="sel"></i>
            <p class="count-gold">2100金币</p>
            <p class="count-rmb">¥30</p>
          </li>
          <li>
            <i class="sel"></i>
            <p class="count-gold">3500金币</p>
            <p class="count-rmb">¥50</p>
          </li>
          <li>
            <i class="sel"></i>
            <p class="count-gold">7000金币</p>
            <p class="count-rmb">¥100</p>
          </li>
          <li>
            <i class="sel"></i>
            <p class="count-gold">35000金币</p>
            <p class="count-rmb">¥500</p>
          </li>
        </ul>
      </div> 
      <div class="sub-btn">
        <a href="javascript:;" class="btn-group btn-block">
          立即充值
        </a>
      </div>
    </div>
    <!-- 选择充值金额 end-->
  </div>
  <!-- 金币充值 end-->
</div>
</body>
</html>