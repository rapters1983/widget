<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
   <meta name="viewport" content="maximum-scale=0.5,minimum-scale=0.5,user-scalable=1,width=device-width,initial-scale=0.5"/>
  <meta content="yes" name="apple-mobile-web-app-capable" />
  <meta content="black" name="apple-mobile-web-app-status-bar-style" />
  <meta content="telephone=no" name="format-detection" />
  <link rel="stylesheet" href="../css/reset.css">
  <link rel="stylesheet" href="../css/base.css">
  <link rel="stylesheet" href="../css/common.css">
  <link rel="stylesheet" href="../css/font-icon.css">
  <title>注册</title>
</head>
<body>
<div class="wrap">
  <!-- 注册 -->
  <div class="register">
    <!-- top顶部 -->
    <div class="top-bar">
      <div class="top-bar-bd">
        <p class="title">
          <i class="icon-m icon-close"></i>
          注册
          <span class="btn">登录</span>
        </p>
      </div>
      <div class="top-bar-line"></div>
    </div>
    <!-- top顶部 -->
    
    <!-- 主内容区域 -->
    <div class="hd">
      <!-- Group -->
      <div class="form-group form-group-first">
        <label for="" class="control-label">账号：</label>
        <input class="form-control" id="firstname" name="firstname" type="text" placeholder="请输入您的账号" autocapitalize="off" />
      </div>
      <!-- // Group END -->

      <!-- Group -->
      <div class="form-group">
        <label for="" class="control-label">昵称：</label>
        <input class="form-control" id="firstname" name="firstname" type="text" placeholder="请输入昵称" autocapitalize="off" />
      </div>
      <!-- // Group END -->

      <!-- Group -->
      <div class="form-group">
        <label for="" class="control-label">密码：</label>
        <input class="form-control" id="password" name="password" type="text" placeholder="请输入密码" autocapitalize="off" />
      </div>            
      <!-- // Group END -->

      <!-- Group -->
      <div class="form-group">
        <label for="" class="control-label">确认密码：</label>
        <input class="form-control" id="password" name="password" type="text" placeholder="请确认密码" autocapitalize="off" />
      </div>            
      <!-- // Group END -->

      <!-- Group -->
      <div class="form-group form-group-last">
        <label for="" class="control-label">邮箱：</label>
        <input class="form-control" id="password" name="password" type="text" placeholder="安全邮箱" autocapitalize="off" />
      </div>            
      <!-- // Group END -->
    </div>
    <!-- 主内容区域 end -->

    <div class="agreement-link">
      <i class="active"></i>我已阅读并同意<a href="register-agreement.html">注册协议</a>和<a href="privacy.html">隐私政策</a>
    </div>
    
    <!-- btn -->
    <div class="btn-box">
      <a href="javascript:;" class="btn-group btn-block">注册</a>
    </div>
    <!-- btn end-->
  </div>
  <!-- 注册 end-->
</div>
</body>
</html>