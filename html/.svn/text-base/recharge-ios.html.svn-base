<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta content="yes" name="apple-mobile-web-app-capable" />
  <meta content="black" name="apple-mobile-web-app-status-bar-style" />
  <meta content="telephone=no" name="format-detection" />
  <link rel="stylesheet" href="../css/reset.css">
  <link rel="stylesheet" href="../css/base.css">
  <link rel="stylesheet" href="../css/font-icon.css">
  <title>金币充值</title>
</head>
<body>
<div class="wrap">
  <!-- 金币充值 -->
  <div class="recharge">
    <!-- top顶部 -->
    <div class="top-bar">
      <div class="top-bar-bd">
        <p class="title">
          <i class="icon-m icon-close" onclick="api.closeWin();"></i>
          金币充值
        </p>
      </div>
      <div class="top-bar-line"></div>
    </div>
    <!-- top顶部 -->
    
    <div id="conWrap" style="overflow:hidden;overflow-y:auto;">
      <!-- 金币余额 -->
      <div class="remain-balance">
        <span class="pull-right f26">充值就送等量战旗币！</span>
        <p class="org f32">金币余额：<span id="num-usermoney"></span></p>
      </div>
      <!-- 金币余额 end -->

      <!-- 选择充值金额 -->
      <div class="rechage-limit">
        <div class="til">请选择充值金额</div>
        <div class="limit-list">
          <ul class="clearfix" id="list-chargeType">
            <li data-gold="420" data-rmb="6">
              <i class="sel"></i>
              <p class="count-gold">420金币</p>
              <p class="count-rmb">¥6</p>
            </li>
            <li data-gold="840" data-rmb="12">
              <i class="sel"></i>
              <p class="count-gold">840金币</p>
              <p class="count-rmb">¥12</p>
            </li>
            <li data-gold="2100" data-rmb="30">
              <i class="sel"></i>
              <p class="count-gold">2100金币</p>
              <p class="count-rmb">¥30</p>
            </li>
            <li data-gold="3500" data-rmb="50">
              <i class="sel"></i>
              <p class="count-gold">3500金币</p>
              <p class="count-rmb">¥50</p>
            </li>
            <li data-gold="6860" data-rmb="98">
              <i class="sel"></i>
              <p class="count-gold">6860金币</p>
              <p class="count-rmb">98</p>
            </li>
            <li data-gold="36260" data-rmb="518">
              <i class="sel"></i>
              <p class="count-gold">36260金币</p>
              <p class="count-rmb">¥518</p>
            </li>
          </ul>
        </div> 
        <div class="sub-btn">
          <a href="javascript:;" class="btn-group btn-block" id="btn-charge">
            立即充值
          </a>
        </div>
      </div>
      <!-- 选择充值金额 end-->
    </div>
  </div>
  <!-- 金币充值 end-->
</div>
<script src="../script/lib/jquery-2.1.1.min.js"></script>
<script src="../script/api.js"></script>
<script src="../script/common.js"></script>
<script src="../script/charge-ios.js"></script>
</body>
</html>