<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta content="yes" name="apple-mobile-web-app-capable" />
  <meta content="black" name="apple-mobile-web-app-status-bar-style" />
  <meta content="telephone=no" name="format-detection" />
  <link rel="stylesheet" href="../css/reset.css">
  <link rel="stylesheet" href="../css/base.css">
  <link rel="stylesheet" href="../css/font-icon.css">
  <link rel="stylesheet" href="../css/api.css">
  <title>直播间</title>
</head>
<body>
<!-- 赠送礼物弹层 -->
  <div id="giftPop" class="live-pop" >
    <!-- 数量输入框 -->
    <div id="countPop" class="count-pop hidden">
      <div class="arrow arrow-bottom"><input ></div>
      <ul id="countList"></ul>
    </div>
    <!-- 数量输入框 end-->
    <div class="title">
      赠送礼物
      <span class="pull-right"><i class="icon-m icon-record"></i>充值金币</span>
    </div>
    <!-- 礼物列表 -->
    <ul id="giftList" class="gift-list clearfix">
      <li class="active">
        <div class="gift-border"><img src="../image/gift-crnk.png" class="gift-icon"></div>
        <p>大宝剑</p>
      </li>
      <li>
        <div class="gift-border"><img src="../image/gift-dbj.png" class="gift-icon"></div>
        <p>超人内裤</p>
      </li>
      <li>
        <div class="gift-border"><img src="../image/gift-mlt.png" class="gift-icon"></div>
        <p>麻辣烫</p>
      </li>
      <li>
        <div class="gift-border"><img src="../image/gift-d.png" class="gift-icon"></div>
        <p>锅</p>
      </li>
      <li>
        <div class="gift-border"><img src="../image/gift-l.png" class="gift-icon"></div>
        <p>溜</p>
      </li>
      <li>
        <div class="gift-border"><img src="../image/gift-g.png" class="gift-icon"></div>
        <p>顶</p>
      </li>
    </ul>
    <!-- 礼物列表 end-->

    <!-- 礼物价钱显示 -->
    <div class="gift-price">
      <i id="giftName">--</i>：<i id="giftCount">--</i><span id="coinType">--</span>
    </div>
    <!-- 礼物价钱显示 end-->

    <!-- 赠送详情 -->
    <div class="send-detail">
      <span id="sendGift" class="send-btn">赠送</span>
      数量：<input class="input-count" id="inputCount" value="1">个
    </div>
    <!-- 赠送详情 end-->
  </div>
  <!-- 赠送礼物弹层 end-->
</body>
<script src="../script/lib/jquery-2.1.1.min.js"></script>
<script src="../script/api.js"></script>
<script src="../script/common.js"></script>
<script src="../script/gift.js"></script>
</html>


